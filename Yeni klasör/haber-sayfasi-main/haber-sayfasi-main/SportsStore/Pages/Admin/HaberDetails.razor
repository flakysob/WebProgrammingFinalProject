@page "/admin/haberler/details/{id:int}"

<h3 class="bg-info text-white text-center p-1">Detaylar</h3>

<table class="table table-sm table-bordered table-striped">
    <tbody>
        <tr><th>ID</th><td>@News.NewsID</td></tr>
        <tr><th>Name</th><td>@News.Baslik</td></tr>
        <tr><th>Description</th><td>@News.Icerik</td></tr>
        <tr><th>Category</th><td>@News.Ozet</td></tr>
        <tr><th>Price</th><td>@News.ResimYol</td></tr>
        <tr><th>Price</th><td>@News.HaberlerinKategorisi</td></tr>
    </tbody>
</table>

<NavLink class="btn btn-warning" href="@EditUrl">Düzenle</NavLink>
<NavLink class="btn btn-secondary" href="/admin/haberler">Geri</NavLink>

@code { [Inject]
    public INewsRepository Repository { get; set; }

    [Parameter]
    public int Id { get; set; }

    public HaberleriEkleModelClass News { get; set; }

    protected override void OnParametersSet()
    {
        News = Repository.Haberler.FirstOrDefault(p => p.NewsID == Id);
    }

    public string EditUrl => $"/admin/haberler/edit/{News.NewsID}"; }
