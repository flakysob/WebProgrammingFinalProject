@model HaberleriEkleModelClass

@if (Model.NewsID == 1)
{
    <div class="carousel-item active">
    <img class="d-block w-100 h-100" src="@Model.ResimYol" alt="@Model.Baslik">

    <div class="carousel-caption d-none d-md-block">
        <h5>@Model.Baslik</h5>
        <p>@Model.Ozet</p>
    </div>
    </div>
}
else
{
    <div class="carousel-item">
    <img class="d-block w-100 h-100" src="@Model.ResimYol" alt="@Model.Baslik">

    <div class="carousel-caption d-none d-md-block">
        <h5>@Model.Baslik</h5>
        <p>@Model.Ozet</p>
    </div>
    </div>
}
